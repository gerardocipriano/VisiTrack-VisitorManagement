@model Web.Features.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@{
    Layout = "_Layout";
}

<!-- ~/css/login.css parte dalla root del progetto ovvero la cartella wwwroot -->
<link rel="stylesheet" href="~/css/login.css" />

<div class="main">

    <div>
        <div role="region" aria-label="Login title">
            <h1 class="title text-primary">Visitrack - Login</h1>
        </div>
        <form method="post" role="form" autocomplete="off">
            <input asp-for="ReturnUrl" type="hidden" />

            <div class="form-group">
                <label asp-for=Email></label>
                <div class="input-group">
                    <input asp-for="Email" class="form-control" type="text" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for=Password></label>
                <div class="input-group">
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" role="switch">
                    <label asp-for="RememberMe" class="form-check-label">Rimani Connesso</label>
                </div>
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="login-button">Accedi</button>
            </div>
        </form>

    </div>
</div>