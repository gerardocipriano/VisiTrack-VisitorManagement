@model Web.Features.Login.LoginViewModel
@{
    ViewData["Title"] = "Check-In";
}

<!-- ~/css/login.css parte dalla root del progetto ovvero la cartella wwwroot -->
<link rel="stylesheet" href="~/css/login.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<div class="main">

    <div>
        <div class="title text-primary">Visitrack - Check-In</div>
        <div class="container">
            <form>
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" class="form-control" id="nome" name="nome">
                </div>
                <div class="form-group">
                    <label for="cognome">Cognome</label>
                    <input type="text" class="form-control" id="cognome" name="cognome">
                </div>
                <div class="form-group">
                    <label for="azienda">Azienda</label>
                    <input type="text" class="form-control" id="azienda" name="azienda">
                </div>
                <div class="form-group">
                    <label for="mail">Mail</label>
                    <input type="text" class="form-control" id="mail" name="mail">
                </div>
                <div class="form-group mb-3">
                    <label for="referente">Referente</label>
                    <input type="text" class="form-control" id="referente" name="referente">
                </div>
                <button type="reset" class="btn btn-warning mr-3">Clean</button>
                <button type="submit" class="btn btn-primary btn-block">Check-In</button>
            </form>
        </div>
    </div>
</div>