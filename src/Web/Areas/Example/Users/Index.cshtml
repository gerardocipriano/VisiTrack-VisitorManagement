@inject IHtmlLocalizer<Web.Areas.Example.Users.IndexViewModel> ModelLocalizer
@model Web.Areas.Example.Users.IndexViewModel
@{
    ViewData["Title"] = "Utenti";
}
@section styles {
    <link rel="stylesheet" href="~/css/visitorsList.css" />
}

@section pageTitle{
    <nav class="navbar navbar-expand navbar-light flex-wrap onit-page-title" style="display: flex; justify-content: center; width: 50vw; margin-inline: auto;">
        <a class="navbar-brand">
            @ViewData["Title"] <small class="text-muted" title="numero di elementi individuati con i filtri attuali">(@Model.TotalItems.ToString("N0"))</small>
        </a>
        <ul class="navbar-nav flex-wrap ms-auto">
            <li>
                <a class="btn btn-light ms-2" href="@Url.Action(MVC.Example.Users.New())" title="Inserisci un nuovo elemento">
                    <i class="fa-solid fa-plus"></i>&nbsp;Nuovo
                </a>
            </li>
        </ul>
    </nav>
}
@section pageSubtitle{
    <nav class="navbar navbar-expand navbar-light flex-wrap onit-page-subtitle" style="display: flex; justify-content: center;">
        <form method="get" id="annullaRicerca">
        </form>
        <form class="onit-form-search" method="get" autocomplete="off">
            <div class="row">
                <div class="col-sm-auto onit-form-search-col-auto-2x">
                    <label asp-for="Filter"></label>
                    <div class="input-group onit-input-group-union">
                        <span class="input-group-text"><i class="fa-solid fa-fw fa-magnifying-glass"></i></span>
                        <input asp-for="Filter" class="form-control" />
                    </div>
                </div>

                <div class="col-sm-auto pt-2 mt-auto">
                    <button class="btn btn-primary" type="submit">
                        Cerca
                    </button>
                    <button class="btn btn-link" type="button" title="Annulla tutti i parametri della ricerca" onclick="document.getElementById('annullaRicerca').submit();">
                        Azzera ricerca
                    </button>
                </div>
            </div>
        </form>
    </nav>
}
<div>
    <div class="container-fluid">

        <div class="user-list">

            @if (Model.Users.Any() == false)
            {
                <div>Nessun elemento trovato con i filtri correnti</div>
            }
            else
            {   
                @foreach (var user in Model.Users)
                {
                    <div class="user" onclick="javascript:utilities.navigateUrlExcludeOnitNotNavigate('@Url.Action(MVC.Example.Users.Edit(user.Id))')" title="@ModelLocalizer["Modifica utente"] @user.Email">
                        <div class="description">
                            <a href="@Url.Action(MVC.Example.Users.Edit(user.Id))" title="@ModelLocalizer["Modifica utente"] @user.Email">@user.FirstName @user.LastName</a>
                            <p>@user.Email</p>
                        </div>
                        <div class="company">
                            <label>Azienda</label>
                        </div>
                        <button class="check-out">Check-out</button>
                    </div>
                }
            }
        </div>

        <div class="row">
            <div class="col-12 p-0">

                    <footer>
                        <tr>
                            <td colspan="3">
                                <nav class="navbar navbar-expand justify-content-md-center">
                                    <ul class="navbar-nav flex-wrap"><partial name="@MVC.Shared.Views._PagingPartial" model="Model" /></ul>
                                </nav>
                            </td>
                        </tr>
                    </footer>
                </table>
            </div>
        </div>
    </div>
</div>